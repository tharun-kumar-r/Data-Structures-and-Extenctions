

<h3>Employees Data</h3>
<hr />
<table class="table">
    <tr>
        <th scope="col">
            Id
        </th scope="col">
        <th>
            Name
        </th scope="col">
        <th>
            Age
        </th>
        <th scope="col">
            Email
        </th>
        <th scope="col">
            Salary
        </th>
        <th scope="col">
            PhoneNumber
        </th>

        <th scope="col">
            Address
        </th>

        <th scope="col">
            Country
        </th>
        <th scope="col">
            Action
        </th>
    </tr>

    @foreach (var emp in ViewBag.data)
    {
        <tr>
            <td>
                @emp.Id
            </td>
            <td>

              <a asp-action="view" asp-route-id="@emp.Id" >  @emp.FirstName @emp.MiddleName @emp.LastName </a>
            </td>
            <td>
                @emp.Age
            </td>
            <td>
                @emp.Email
            </td>
            <td>
                @emp.Salary
            </td>
            <td>
                @emp.PhoneNumber
            </td>

            <td>
                @emp.Address
            </td>

            <td>
                @emp.Country
            </td>
            <td>
              <a asp-action="edit" asp-route-id="@emp.Id" >Edit</a> | <a asp-action="Del" asp-route-id="@emp.Id" >Delete</a>
            </td>

        </tr>

    }
</table>



